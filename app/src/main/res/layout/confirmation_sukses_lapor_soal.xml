<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/confirmation_dialog_bg"
    android:padding="48dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_sukses" />

    <TextView
        android:id="@+id/confirmation_dialog_text"
        style="@style/Deagle.Text.Title.Large"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Laporan Anda Diterima"
        android:layout_marginTop="10dp"
        android:lines="2"
        android:textColor="?attr/colorOnBackground"
        android:singleLine="false"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/confirmation_dialog_desc_text"
        style="@style/Deagle.Text.Body.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Silakan tunggu balasan \ndari kami"
        android:textColor="?attr/colorOnBackground"
        android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRiwayat"
        style="@style/Deagle.Text.Title.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cornerRadius="8dp"
        android:text="Riwayat Laporan"
        android:textColor="?attr/colorOnPrimary"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no_button_riwayat"
        style="?attr/materialButtonOutlinedStyle"
        android:textAppearance="@style/Deagle.Text.Title.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="8dp"
        app:strokeColor="?attr/colorPrimary"
        android:text="Kembali" />

</LinearLayout>