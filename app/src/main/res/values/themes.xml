<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Deagle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/fonts</item>
        <item name="colorOnSurface">@color/fonts</item>

        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Deagle.Text.Title.Large" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
    </style>
    
    <style name="Deagle.Text.Title.Medium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
    </style>
    
    <style name="Deagle.Text.Title.Small" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="Deagle.Text.Label.Medium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Deagle.Text.Body.Medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>
    
    <style name="Deagle.Text.Body.Small" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>
    
</resources>